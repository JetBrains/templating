<Project>
  <PropertyGroup>
    <TemplatingTasksAssembly>$(MSBuildThisFileDirectory)..\tasks\netstandard2.0\Microsoft.TemplateEngine.Tasks.dll</TemplatingTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="LocalizeTemplates" AssemblyFile="$(TemplatingTasksAssembly)" />

  <Target Name="LocalizeTemplatesAfterBuild" Condition="'$(LocalizeTemplates)' == 'true'" BeforeTargets="AfterBuild">
    <Message Importance="High" Text="Localizing templates." />
    <LocalizeTemplates TemplateFolder="$(LocalizableTemplatesPath)" SearchSubfolders="true" Languages="$(TemplateLanguages)"/>
    <Message Importance="High" Text="Template localizaion complete." />
  </Target>
</Project>
